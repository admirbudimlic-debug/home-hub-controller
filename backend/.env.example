# BratesHUB Controller Backend Configuration
# Copy to .env and edit values

# Server
PORT=3001
NODE_ENV=production

# CORS - comma separated origins allowed to access this API
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-frontend.lovable.app

# Optional: API key for security (leave empty to disable)
API_KEY=

# iLO Connection
ILO_HOST=192.168.1.100
ILO_USERNAME=Administrator
ILO_PASSWORD=your-password-here

# Channel Configuration
CHANNEL_START=5001
CHANNEL_COUNT=9

# Service patterns - uses systemd template instance format
# Format: service@{port}.service where {port} is replaced with channel ID
# Examples: rx@5001.service, rec@5001.service, rtmp@5001.service
SERVICE_PATTERN_RX=rx@{port}.service
SERVICE_PATTERN_REC=rec@{port}.service
SERVICE_PATTERN_RTMP=rtmp@{port}.service

# Config file path (for channel configurations)
CONFIG_PATH=/etc/brateshub

# Logging
LOG_LEVEL=info
LOG_MAX_LINES=200
