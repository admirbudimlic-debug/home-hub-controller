# Channel Configuration Template
# Copy to /opt/brateshub/configs/channel<PORT>.env

# =============================================================================
# SRT Input Settings (RX Service)
# =============================================================================

# SRT port (usually matches channel ID)
SRT_PORT=5001

# SRT mode: "listener" (wait for connection) or "caller" (connect to remote)
SRT_MODE=listener

# For caller mode only - remote host to connect to
# SRT_CALLER_HOST=192.168.1.100
# SRT_CALLER_PORT=5001

# SRT latency in milliseconds (higher = more resilient, more delay)
SRT_LATENCY=200

# SRT receive buffer size in bytes
SRT_RCVBUF=12288000

# SRT encryption passphrase (leave empty for no encryption)
SRT_PASSPHRASE=

# =============================================================================
# Recording Settings (REC Service)
# =============================================================================

# Enable/disable recording (not yet implemented in controller)
REC_ENABLED=true

# Segment duration in seconds (3600 = 1 hour)
REC_SEGMENT_DURATION=3600

# Maximum number of recording files to keep (oldest deleted first)
REC_MAX_FILES=24

# Recording filename format (strftime format)
REC_FORMAT=%Y%m%d_%H%M%S

# =============================================================================
# RTMP Output Settings (RTMP Service)
# =============================================================================

# Enable/disable RTMP output (not yet implemented in controller)
RTMP_ENABLED=true

# RTMP destination URL
RTMP_URL=rtmp://localhost/live/channel5001

# Reconnection settings
RTMP_RECONNECT=1
RTMP_RECONNECT_DELAY=5
